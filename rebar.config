{require_otp_vsn, "R14B04|R15B02|R15B03|R16B"}.

{deps, [
    {leo_commons,           ".*", {git, "https://github.com/leo-project/leo_commons.git",           {tag, "0.12.10" }}},
    {leo_logger,            ".*", {git, "https://github.com/leo-project/leo_logger.git",            {tag, "0.10.6" }}},
    {leo_object_storage,    ".*", {git, "https://github.com/leo-project/leo_object_storage.git",    {tag, "0.12.27"}}},
    {leo_redundant_manager, ".*", {git, "https://github.com/leo-project/leo_redundant_manager.git", {tag, "0.12.14"}}},
